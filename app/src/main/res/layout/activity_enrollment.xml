<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enrollment"
    android:orientation="vertical">
  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Enroll Subject Here"
      android:textSize="35dp"
      tools:layout_editor_absoluteX="69dp"
      tools:layout_editor_absoluteY="62dp" />

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:cardElevation="8dp"
      app:cardCornerRadius="12dp"
      app:cardBackgroundColor="@color/white">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
    android:orientation="vertical"
      android:id="@+id/subjectContainer">

    <CheckBox
        android:id="@+id/course1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numerical Methods (4 credits)" />
    <CheckBox
        android:id="@+id/course2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile programming (4 credits)" />
    <CheckBox
        android:id="@+id/course3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artificial Intelligence (4 credits)" />
    <CheckBox
        android:id="@+id/course4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Software Engineering (4 credits)" />
    <CheckBox
        android:id="@+id/course5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Structure and Algorithm (4 credits)" />
    <CheckBox
        android:id="@+id/course6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3D Computer Graphics (4 credits)" />
    <CheckBox
        android:id="@+id/course7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Network Security (4 credits)" />
    <CheckBox
        android:id="@+id/course8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Economic Survival (4 credits)" />
    <Button
        android:id="@+id/btnEnroll"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/teal_700"
        android:layout_height="wrap_content"
        android:text="Enroll" />
  </LinearLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>